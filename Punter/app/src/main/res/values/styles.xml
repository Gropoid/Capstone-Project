<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/deep_purple_500</item>
        <item name="colorPrimaryDark">@color/deep_purple_800</item>
        <item name="colorAccent">@color/yellow_A400</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/deep_purple_500</item>
    </style>

    <style name="FatText">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_50</item>
    </style>

    <style name="FattestText">
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/orange_700</item>
    </style>

</resources>
